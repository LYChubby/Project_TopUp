<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<script>
  // Fungsi untuk menyembunyikan tombol admin
  const hideAdminButtons = () => {
    const addButtons = document.querySelectorAll(".btnAdmin");
    addButtons.forEach((button) => {
      button.style.display = "none";
    });
  };

  document.addEventListener("DOMContentLoaded", function () {
    // Ambil username dari localStorage atau sessionStorage
    const username = localStorage.getItem("username"); // Misalnya disimpan saat login
    if (!username) {
      console.error("No username found in localStorage. Please log in.");
    } else {
      console.log("Username fetched from localStorage:", username);
    }

    // Panggil fungsi loadItems untuk memuat item terlebih dahulu
    loadItems();

    // Cek username setelah item dimuat, dan sembunyikan tombol admin jika bukan admin
    if (username !== "admin") {
      console.log("Hiding admin buttons for non-admin user");
      hideAdminButtons(); // Sembunyikan tombol admin jika bukan admin
    } else {
      console.log("Admin user detected, buttons should be visible");
    }
  });

  $(document).ready(function () {
    console.log("DOM telah selesai dimuat");

    $("#itemForm").submit(function (e) {
      e.preventDefault();

      const itemId = $("#itemId").val();
      const itemName = $("#itemName").val().trim();
      const itemPrice = $("#itemPrice").val().trim();
      const itemType = $("#itemType").val();
      const itemImage = $("#itemImage").val().trim();

      const data = {
        name: itemName,
        price: parseInt(itemPrice, 10),
        type: itemType,
        image_url: itemImage,
      };

      const url = itemId ? `/api/mobile-legend/update/${itemId}` : "/api/mobile-legend/tambah";
      const method = itemId ? "PUT" : "POST";

      $.ajax({
        url: url,
        method: method,
        contentType: "application/json",
        data: JSON.stringify(data),
        success: function () {
          loadItems();
          $("#itemForm")[0].reset();
          $("#itemModal").modal("hide");
        },
        error: function () {
          alert("Gagal menyimpan data");
        },
      });
    });
  });

  // Fungsi loadItems untuk mengambil data item
  function loadItems() {
    $.getJSON("/api/mobile-legend", function (items) {
      renderItems(items);

      // Setelah item dimuat, periksa username dan sembunyikan tombol admin jika diperlukan
      const username = localStorage.getItem("username");
      if (username !== "admin") {
        console.log("Hiding admin buttons after rendering for non-admin user");
        hideAdminButtons();
      } else {
        console.log("Admin buttons should remain visible after rendering");
      }
    }).fail(function () {
      alert("Gagal mengambil data");
    });
  }

  // Fungsi untuk merender item
  function renderItems(items) {
    const specialItemsContainer = $("#specialItemsContainer");
    const instantTopUpContainer = $("#instantTopUpContainer");

    specialItemsContainer.empty();
    instantTopUpContainer.empty();

    items.forEach((item) => {
      const card = `
        <div class="card-container" id="item-${item.id}">
          <div class="card-item">
            <div class="points">${item.name}</div>
            <div class="items-price">Rp ${item.price.toLocaleString("id-ID")}</div>
            <div class="d-flex justify-content-around mt-2">
              <button class="btn btn-sm btn-success btnAdmin" onclick="editItem(${item.id})">Edit</button>
              <button class="btn btn-sm btn-danger btnAdmin" onclick="deleteItem(${item.id})">Delete</button>
            </div>
          </div>
          <div class="logo-container">
            <img class="logo-items" src="${item.image_url}" alt="Item Image" />
          </div>
        </div>
      `;
      if (item.type === "special") {
        specialItemsContainer.append(card);
      } else {
        instantTopUpContainer.append(card);
      }
    });
    addCardClickListeners(items);
  }

  function addCardClickListeners(items) {
    items.forEach((item) => {
      const cardElement = document.querySelector(`#item-${item.id} .card-item`);
      if (cardElement) {
        cardElement.addEventListener("click", () => {
          updatePayBill(item.price);
        });
      }
    });
  }

  function updatePayBill(amount) {
    const formatCurrency = (number) => {
      return "Rp " + number.toLocaleString("id-ID");
    };

    const payBills = document.querySelectorAll("#pay-bill");
    payBills.forEach((payBill) => {
      payBill.textContent = formatCurrency(amount);
    });
  }

  // Edit dan hapus item
  function editItem(id) {
    $.getJSON(`/api/mobile-legend/data/${id}`, function (item) {
      $("#itemId").val(item.id);
      $("#itemName").val(item.name);
      $("#itemPrice").val(item.price);
      $("#itemType").val(item.type);
      $("#itemImage").val(item.image_url);
      $("#itemModalLabel").text("Edit Item");
      $("#itemModal").modal("show");
    }).fail(function () {
      alert("Gagal mengambil data item");
    });
  }

  function deleteItem(id) {
    if (confirm("Apakah Anda yakin ingin menghapus item ini?")) {
      $.ajax({
        url: `/api/mobile-legend/delete/${id}`,
        method: "DELETE",
        success: function () {
          loadItems();
        },
        error: function () {
          alert("Gagal menghapus data");
        },
      });
    }
  }

  $("#itemModal").on("shown.bs.modal", function () {
    const form = $("#itemForm")[0];
    console.log("Modal content:", $(this).html());
    console.log("Form found:", form ? "Yes" : "No");

    if (form) {
      form.reset();
    } else {
      console.error("Form tidak ditemukan");
    }

    $("#itemId").val("");
  });

  function openAddModal() {
    console.log("Opening modal...");
    console.log("Modal element:", $("#itemModal").length > 0 ? "Found" : "Not Found");
    $("#itemModal").modal("show");
  }
</script>
